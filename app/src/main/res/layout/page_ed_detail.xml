<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/edDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2020-07-13"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:gravity="center"/>
    <ImageButton
        android:id="@+id/edPrevious"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#0000"
        android:layout_below="@id/edDate"
        android:src="@drawable/ic_back_white"/>
    <ImageButton
        android:id="@+id/edNext"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#0000"
        android:layout_below="@id/edDate"
        android:src="@drawable/ic_right_white"/>
    <TextView
        android:layout_marginVertical="16dp"
        android:id="@+id/ojItemO"
        android:layout_below="@id/edDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="â—"
        android:textSize="8sp"
        android:textColor="#FFF"
        android:gravity="center"/>
    <ScrollView
        android:layout_below="@id/ojItemO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oj_item_bg">
        <LinearLayout
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emotion"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_marginTop="-16dp"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerEDDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </RelativeLayout>




            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Situation"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:id="@+id/detailSituation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thought"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:id="@+id/detailThought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:id="@+id/detailAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:id="@+id/detailResult"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="@string/introED" />
            <Button
                android:id="@+id/selfTalk"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:text="self-talk"
                android:paddingRight="36dp"
                android:paddingLeft="16dp"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:background="@drawable/button_bg"
                android:drawableRight="@drawable/ic_self_talk"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>