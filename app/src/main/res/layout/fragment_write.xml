<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="32dp">
    <Button
        android:id="@+id/writeED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Emotion Diary"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:fontFamily="serif-monospace"
        android:drawableRight="@drawable/ic_emotion"
        android:drawableTint="#FFF"
        android:background="@drawable/button_bg"
        android:padding="8dp"/>

    <Button
        android:id="@+id/writeOJ"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Observation Journal"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:fontFamily="serif-monospace"
        android:drawableRight="@drawable/ic_observe"
        android:background="@drawable/button_bg"
        android:padding="8dp"/>

    <Button
        android:id="@+id/writeBP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Bliss Plan"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:fontFamily="serif-monospace"
        android:drawableRight="@drawable/ic_bliss"
        android:background="@drawable/button_bg"
        android:padding="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>