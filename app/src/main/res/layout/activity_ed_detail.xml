<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample3"
    android:backgroundTint="#C1161C35"
    android:backgroundTintMode="src_over"
    tools:context=".EDDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edItemToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/edDate"
        android:layout_below="@id/edItemToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2020-07-13"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:gravity="center"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#0000"
        android:layout_below="@id/edDate"
        android:src="@drawable/ic_back_white"/>
    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#0000"
        android:layout_below="@id/edDate"
        android:src="@drawable/ic_right_white"/>
    <TextView
        android:layout_marginVertical="16dp"
        android:id="@+id/ojItemO"
        android:layout_below="@id/edDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="●"
        android:textSize="8sp"
        android:textColor="#FFF"
        android:gravity="center"/>
    <ScrollView
        android:layout_below="@id/ojItemO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/oj_item_bg">
        <LinearLayout
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Situation"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="What di you do yesterday? I'm "
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thought"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="What di you do yesterday? I'm "
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emotion"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="What di you do yesterday? I'm "
                android:drawableLeft="@drawable/e15_want"
                android:gravity="center_horizontal"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="What di you do yesterday? I'm "
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorSky"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:fontFamily="monospace"
                android:textColor="@color/colorSky"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:text="@string/introED"
                android:gravity="center_horizontal"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:text="self-talk"
                android:drawableRight="@drawable/kakao_account_logo"/>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>